          <script src="/javascripts/savepdf.js"></script>
          <!-- QUIZ -->
          <script defer src="/javascripts/quiz/quiz.js"></script>

          <script src="/javascripts/server.js"></script>
          <script src="/javascripts/phone.js"></script>
          

          <script defer src="/javascripts/code_editor/codemirror/lib/codemirror.js"></script>
          <script defer src="/javascripts/code_editor/codemirror/mode/javascript/javascript.js"></script>
          <script defer src="/javascripts/code_editor/codemirror/mode/python/python.js"></script>
          <script defer src="javascripts/code_editor/codemirror/mode/clike/clike.js"></script>
          <script defer src="/javascripts/code_editor/codemirror/mode/clike/clike.js"></script>
          <script defer src="/javascripts/code_editor/codemirror/mode/htmlmixed/htmlmixed.js"></script>
          <script defer src="/javascripts/code_editor/codemirror/mode/css/css.js"></script>
