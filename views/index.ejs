  <link rel="stylesheet" href="javascripts/code_editor/codemirror/theme/monokai.css">
  <link rel="stylesheet" href="stylesheets/timer.css">

  <title>
    <%= title %>
  </title>
          
          <link rel="stylesheet" href="/stylesheets/WCE.css">
          <link rel="stylesheet" href="/stylesheets/style.css">
          <link rel="stylesheet" href="/stylesheets/quiz.css">
          <link rel="stylesheet" href="/stylesheets/toolbar.css">
          <script defer src="/javascripts/toolbar.js"></script>
          <script src="/javascripts/users.js"></script>
          <script src="/javascripts/calculator.js"></script>
          <script defer src="/javascripts/paint.js"></script>
